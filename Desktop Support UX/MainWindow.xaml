<Window x:Class="Desktop_Support_UX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop_Support_UX"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="Desktop Support App" x:Name="MainWindowGrid" Height="710" Width="580" Icon="/lilyface.jpg">

    <Grid x:Name="mainScreen" Height="675">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0.314"/>
                <GradientStop Color="#626366" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid VerticalAlignment="Top" HorizontalAlignment="Center" Width="560">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="27*"/>
                <ColumnDefinition Width="113*"/>
            </Grid.ColumnDefinitions>
            <Label Foreground="White" x:Name="DarkModeLabel" Content="Light Mode" HorizontalAlignment="Left" VerticalAlignment="Center" />

            <ToggleButton HorizontalAlignment="Left" Margin="70,3,0,3" x:Name="ToggleButton1" Width="50" Height="20" Checked="ToggleButton1_Checked" Unchecked="ToggleButton1_Unchecked" Grid.ColumnSpan="2">
                <ToggleButton.Template>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="ToggleButtonBorder" Background="Gray" BorderThickness="1" CornerRadius="10" Padding="1">
                            <Border x:Name="circleToggle" Background="White" Width="20" CornerRadius="20" HorizontalAlignment="Left"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="false">
                                <Setter TargetName="circleToggle" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="ToggleButtonBorder" Property="Background" Value="LightBlue"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="true">
                                <Setter TargetName="circleToggle" Property="HorizontalAlignment" Value="Left"/>
                                <Setter TargetName="circleToggle" Property="Background" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </ToggleButton.Template>
            </ToggleButton>

            <ComboBox FontSize="14" x:Name="QuickLinks" Width="120" Height="25" VerticalAlignment="Center" HorizontalAlignment="Left" FontFamily="Consolas" Grid.Column="1" Margin="332,0,0,0" >
                <ComboBoxItem Content="Quick Links" IsSelected="true"/>
            </ComboBox>
        </Grid>

        <Label x:Name="Label1Background" VerticalContentAlignment="Center" Foreground="White" HorizontalContentAlignment="Center" FontFamily="Consolas" Content="Desktop Support App" HorizontalAlignment="Center" VerticalAlignment="Top" Height="90" Width="580" FontSize="40" Margin="0,31,0,0">
            <Label.Background>
                <RadialGradientBrush>
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#626366" Offset="0"/>
                    <GradientStop Color="#626366" Offset="0.618"/>
                </RadialGradientBrush>
            </Label.Background>
        </Label>

        <Grid HorizontalAlignment="Center" Margin="0,121,0,484" Width="580">
            <Label x:Name="inputLabel" Foreground="White" HorizontalContentAlignment="Center" FontFamily="Consolas" Content="Enter User Info" HorizontalAlignment="Center" FontSize="18"  Width="580">
                <Label.Background>
                    <RadialGradientBrush>
                        <GradientStop Color="Black" Offset="1"/>
                        <GradientStop Color="#626366" Offset="0.681"/>
                        <GradientStop Color="#626366" Offset="0"/>
                    </RadialGradientBrush>
                </Label.Background>
            </Label>
            <TextBox Foreground="White" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" FontFamily="Consolas" x:Name="textPlaceholder" FontWeight="ExtraLight"  VerticalAlignment="Bottom" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" Width="150" Height="25" FontSize="13" Background="Transparent" Margin="110,0,0,15"/>
            <TextBox Foreground="White" FontFamily="Consolas" KeyDown="Button_Click" x:Name="txtInput" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="25" TextWrapping="Wrap" Width="150" Background="Transparent" TextChanged="txtInput_TextChanged" Margin="110,0,0,15" FontSize="13"/>
            <ComboBox FontSize="13" x:Name="dropDownMenu" Width="195" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="70,0,0,15" FontFamily="Consolas">
                <ComboBoxItem x:Name="netIDButton" IsSelected="true" Content="User Info" Selected="RadioButton_Checked"/>
                <ComboBoxItem x:Name="computerInfoButton" Content="Computer Info" Selected="computerInfoButton_Checked"/>
                <ComboBoxItem x:Name="checkMIMButton" Content="Dept MIM Group" Selected="checkMIMButton_Checked_1"/>
                <ComboBoxItem x:Name="reportMIMButton" Content="Individual's MIM Groups" Selected="reportMIMButton_Checked"/>
                <ComboBoxItem x:Name="justIDButton" Content="EmployeeID/StudentID" Selected="checkMIMButton_Checked"/>
            </ComboBox>
            <Button  FontFamily="Consolas" Content="Search" FontSize="15"  HorizontalAlignment="Right" Height="25" VerticalAlignment="Center" Width="70" Click="Button_Click_12" Margin="0,15,85,0"/>
        </Grid>

        <Grid Width="500" HorizontalAlignment="Center" Height="35" Margin="0,0,0,230" Background="Black" >
            <Button FontSize="15" FontFamily="Consolas" Content="About" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="29" Width="57"  Click="Button_Click_1" Margin="440,0,0,0" />
            <Button FontFamily="Consolas" FontSize="15" Content="Clear" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center" Height="29" Width="57" Click="Button_Click_2" Margin="3,0,0,0"/>
        </Grid>

        <Grid VerticalAlignment="Top" HorizontalAlignment="Center" Height="420" Width="500" Margin="0,240,0,0">
            <ScrollViewer x:Name="scrollbarName" VerticalScrollBarVisibility="Visible" >
                <TextBox TextChanged="outputGrid_TextChanged" BorderThickness="0" IsReadOnly="True" x:Name="outputGrid" Text=""  FontSize="14" Background="Black" Foreground="WhiteSmoke" Padding="5,10,5,10" FontFamily="Consolas" Height="420"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
