<Window x:Class="Desktop_Support_UX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop_Support_UX"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="Desktop Support App" x:Name="MainWindowGrid" Height="685" Width="685" Icon="/lilyface.jpg">

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="#FFCECECE">
        <Grid Height="900" Width="650" >

            <Grid Margin="0,232,592,281" Background="White" />
            <Grid Margin="592,232,0,281" Background="White"/>

            <Label VerticalContentAlignment="Center" Foreground="Black" HorizontalContentAlignment="Center" FontFamily="Consolas" Content="Desktop Support App" HorizontalAlignment="Center" VerticalAlignment="Top" Height="82" Width="650" FontSize="40" Margin="0,10,0,0">
                <Label.Background>
                    <RadialGradientBrush>
                        <GradientStop Color="#FFCECECE" Offset="1"/>
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="White" Offset="0.618"/>
                    </RadialGradientBrush>
                </Label.Background>
            </Label>

            <Grid HorizontalAlignment="Center" Margin="0,97,0,737" Width="650">
                <Label  x:Name="inputLabel" Foreground="Black" HorizontalContentAlignment="Center" FontFamily="Consolas" Content="Enter User Info" HorizontalAlignment="Center" FontSize="18"  Width="650">
                    <Label.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="#FFCECECE" Offset="1"/>
                            <GradientStop Color="White" Offset="0.681"/>
                            <GradientStop Color="White" Offset="0"/>
                        </RadialGradientBrush>
                    </Label.Background>
                </Label>
                <TextBox  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Consolas" x:Name="textPlaceholder" FontWeight="ExtraLight"  VerticalAlignment="Bottom" HorizontalAlignment="Left" TextWrapping="Wrap" Text="NetID" Width="167" Height="25" FontSize="12" Background="White" Margin="180,0,0,7"/>
                <TextBox  FontFamily="Consolas" x:Name="txtInput" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="25"  TextWrapping="Wrap" Width="167" Background="Transparent" TextChanged="txtInput_TextChanged" Margin="180,0,0,7"/>
                <Button  FontFamily="Consolas" Content="Search" FontSize="15"  HorizontalAlignment="Right" Height="25" VerticalAlignment="Bottom" Width="91" Click="Button_Click" Margin="0,0,205,7"/>
            </Grid>

            <Grid HorizontalAlignment="Center" Margin="0,163,0,668" Width="650">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White" Offset="1"/>
                        <GradientStop Color="White" Offset="1"/>
                        <GradientStop Color="#FFDEDEDE"/>
                        <GradientStop Color="#FFCECECE"/>
                        <GradientStop Color="#FFCECECE"/>
                        <GradientStop Color="#FFE0E0E0"/>
                        <GradientStop Color="#FFCECECE"/>
                        <GradientStop Color="#FFCECECE"/>
                        <GradientStop Color="#FFCECECE"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <RadioButton FontFamily="Consolas" x:Name="netIDButton" HorizontalAlignment="Left" VerticalAlignment="Top" Content="NetID" FontSize="16" GroupName="userInfoChoices" IsChecked="True" Width="79" Checked="RadioButton_Checked" Height="24" Margin="30,0,0,0"/>
                <RadioButton FontFamily="Consolas" x:Name="checkMIMButton" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Check current members of Dept MIM Group" FontSize="16" GroupName="userInfoChoices" IsChecked="False" Width="363" Checked="checkMIMButton_Checked_1" Height="30" Margin="0,0,55,0"/>
                <RadioButton FontFamily="Consolas" x:Name="justIDButton" HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="EmployeeID/StudentID" FontSize="16" GroupName="userInfoChoices" IsChecked="False" Width="198" Checked="checkMIMButton_Checked" Height="29" Margin="0,0,40,0"/>
                <RadioButton FontFamily="Consolas" x:Name="reportMIMButton" HorizontalAlignment="Left" VerticalAlignment="Bottom" Content="Report Individual's current MIM Groups" FontSize="16" GroupName="userInfoChoices" IsChecked="False" Width="357" Checked="reportMIMButton_Checked" Height="29" Margin="50,0,0,0"/>
                <RadioButton FontFamily="Consolas" x:Name="computerInfoButton" HorizontalAlignment="Right" VerticalAlignment="Top" Content="Computer info" FontSize="16" GroupName="userInfoChoices" IsChecked="False" Width="135" Checked="computerInfoButton_Checked" Height="24" Margin="0,0,24,0"/>
            </Grid>

            <Grid Margin="58,232,58,634" Background="Black" >
                <Button FontSize="15" FontFamily="Consolas" Content="About" HorizontalAlignment="Left" VerticalAlignment="Center" Height="22" Width="56"  Click="Button_Click_1" Margin="473,0,0,0"/>
                <TextBlock Foreground="White" FontFamily="Consolas" HorizontalAlignment="Center" Height="22" TextAlignment="Center" TextWrapping="Wrap" Text="ver 3.0.4" VerticalAlignment="Center" Width="80"/>
                <Button FontFamily="Consolas" FontSize="15" Content="Clear" VerticalContentAlignment="Top" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center" Height="22" Width="56" Click="Button_Click_2" Margin="5,0,0,0"></Button>
            </Grid>

            <Grid VerticalAlignment="Top" HorizontalAlignment="Center" Height="359" Width="534" Margin="0,260,0,0" Background="Black">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" BorderThickness="5" Background="Black">
                    <TextBox BorderThickness="0" IsReadOnly="True" x:Name="outputGrid" Text=""  FontSize="14" Background="Black" Foreground="WhiteSmoke" Padding="5,5,5,5" FontFamily="Consolas"/>
                </ScrollViewer>
            </Grid>

            <Grid  Width="650" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,619,0,0" Height="271">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFCECECE" Offset="1"/>
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="White"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Label Content="Quick Links" HorizontalAlignment="Center" HorizontalContentAlignment="Center" FontSize="23" Width="530" Margin="0,0,0,235" FontFamily="Consolas" />
                <Button BorderThickness="0" HorizontalAlignment="Center" FontSize="15.5" FontFamily="Consolas" Foreground="CornflowerBlue" Margin="0,36,0,208" Background="Transparent" Width="650" Click="Button_Click_3" >
                    <Button.Content>
                        <TextBlock Text="Phone Schedule: Desktop Support Phone Schedule" TextDecorations="Underline"/>
                    </Button.Content>
                </Button>
                <Button BorderThickness="0" HorizontalAlignment="Center" FontSize="15.5" FontFamily="Consolas" Foreground="CornflowerBlue" Margin="0,63,0,181" Background="Transparent" Width="650" Click="Button_Click_4" >
                    <Button.Content>
                        <TextBlock Text="Customer List: Desktop Support Customer list by Core Team" TextDecorations="Underline"/>
                    </Button.Content>
                </Button>
                <Button BorderThickness="0" HorizontalAlignment="Center" FontSize="15.5" FontFamily="Consolas" Foreground="CornflowerBlue" Margin="0,90,0,154" Background="Transparent" Width="650" Click="Button_Click_5" >
                    <Button.Content>
                        <TextBlock Text="Service Now KB: UITS Service Now Knowledge Base" TextDecorations="Underline"/>
                    </Button.Content>
                </Button>
                <Button BorderThickness="0" HorizontalAlignment="Center" FontSize="15.5" FontFamily="Consolas" Foreground="CornflowerBlue" Margin="0,117,0,129" Background="Transparent" Width="650" Click="Button_Click_6" >
                    <Button.Content>
                        <TextBlock Text="Splunk: Enterprise network search tool" TextDecorations="Underline"/>
                    </Button.Content>
                </Button>
                <Button BorderThickness="0" HorizontalAlignment="Center" FontSize="15.5" FontFamily="Consolas" Foreground="CornflowerBlue" Margin="0,142,0,104" Background="Transparent" Width="650" Click="Button_Click_7" >
                    <Button.Content>
                        <TextBlock Text="Device Registration Portal: MAB registration portal" TextDecorations="Underline" Height="22"/>
                    </Button.Content>
                </Button>
                <Button BorderThickness="0" HorizontalAlignment="Center" FontSize="15.5" FontFamily="Consolas" Foreground="CornflowerBlue" Margin="0,167,0,79" Background="Transparent" Width="650" Click="Button_Click_8" >
                    <Button.Content>
                        <TextBlock Text="Nimbus: UITS Technology Support Tool" TextDecorations="Underline" Height="22"/>
                    </Button.Content>
                </Button>
                <Button BorderThickness="0" HorizontalAlignment="Center" FontSize="15.5" FontFamily="Consolas" Foreground="CornflowerBlue" Margin="0,192,0,54" Background="Transparent" Width="650" Click="Button_Click_9" >
                    <Button.Content>
                        <TextBlock Text="Hardware Portal: Desktop Support Hardware portal and pricing" TextDecorations="Underline" Height="22"/>
                    </Button.Content>
                </Button>
                <Button BorderThickness="0" HorizontalAlignment="Center" FontSize="15.5" FontFamily="Consolas" Foreground="CornflowerBlue" Margin="0,217,0,30" Background="Transparent" Width="650" Click="Button_Click_10" >
                    <Button.Content>
                        <TextBlock Text="Interactive Floorplans: University of Arizona interactive floor plan maps" TextDecorations="Underline" Height="22"/>
                    </Button.Content>
                </Button>
                <Button BorderThickness="0" HorizontalAlignment="Center" FontSize="15.5" FontFamily="Consolas" Foreground="CornflowerBlue" Margin="0,241,0,5" Background="Transparent" Width="650" Click="Button_Click_11" >
                    <Button.Content>
                        <TextBlock Text="DST Intune Resources: Desktop Support Windows Intune Resources" TextDecorations="Underline" Height="22"/>
                    </Button.Content>
                </Button>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>
