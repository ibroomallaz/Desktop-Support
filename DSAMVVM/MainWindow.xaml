<Window x:Class="DSAMVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DSAMVVM"
        xmlns:viewModel="clr-namespace:DSAMVVM.MVVM.ViewModel"
        xmlns:view="clr-namespace:DSAMVVM.MVVM.View"
        mc:Ignorable="d"
        Height="600" Width="920"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Title="Support App">

    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>

    <Border Background="#272537" CornerRadius="20" Padding="0">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.5" />
        </Border.Effect>

        <DockPanel LastChildFill="True">

            <!-- Status Bar -->
            <view:StatusBarView DockPanel.Dock="Bottom"
                                 DataContext="{Binding StatusBar}"
                                 Margin="10,0,10,10" />

            <!-- Header -->
            <Grid DockPanel.Dock="Top" Height="40" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Title (draggable area) -->
                <TextBlock Text="Support App"
                           VerticalAlignment="Center"
                           FontSize="18"
                           Foreground="White"
                           Margin="20,0,0,0"
                           MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" />

                <!-- Window buttons -->
                <StackPanel Orientation="Horizontal"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Margin="0,0,10,0">
                    <Button Content="—"
                            Width="30"
                            Height="30"
                            Margin="0,0,5,0"
                            Click="Minimize_Click" />
                    <Button Content="X"
                            Width="30"
                            Height="30"
                            Click="Close_Click" />
                </StackPanel>
            </Grid>

            <!-- Sidebar -->
            <StackPanel DockPanel.Dock="Left"
                        Width="200"
                        Background="Transparent"
                        Margin="0">

                <RadioButton Content="Home"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             IsChecked="True"
                             Command="{Binding HomeViewCommand}" />

                <RadioButton Content="User"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding UserCommand}" />

                <RadioButton Content="Computer"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding ComputerCommand}" />

                <RadioButton Content="Groups"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding GroupCommand}" />

                <RadioButton Content="Entra"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding EntraCommand}" />

                <RadioButton Content="Links"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding LinksCommand}" />

                <RadioButton Content="About"
                             Height="50"
                             Foreground="White"
                             FontSize="14"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding AboutCommand}" />
            </StackPanel>

            <!-- Main content -->
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBox Width="250"
                         Height="40"
                         Margin="5"
                         VerticalAlignment="Top"
                         Style="{StaticResource TextBoxTheme}" />

                <ContentControl Grid.Row="1"
                                Content="{Binding CurrentView}" />
            </Grid>

        </DockPanel>
    </Border>
</Window>
