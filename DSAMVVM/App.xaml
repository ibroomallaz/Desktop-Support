<Application x:Class="DSAMVVM.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DSAMVVM"
             xmlns:viewModel="clr-namespace:DSAMVVM.MVVM.ViewModel"
             xmlns:view="clr-namespace:DSAMVVM.MVVM.View"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Theme/MenuButtonTheme.xaml"/>
                <ResourceDictionary Source="/Theme/TextBoxTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type viewModel:HomeViewModel}">
                <view:HomeView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:UserViewModel}">
                <view:UserView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:ComputerViewModel}">
                <view:ComputerView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:GroupViewModel}">
                <view:GroupView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:EntraViewModel}">
                <view:EntraView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:LinksViewModel}">
                <view:LinksView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:AboutViewModel}">
                <view:AboutView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
